<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.party_post.dao.PostDao">

    <!-- 게시글 생성 -->
    <insert id="insertPost" parameterType="PostDTO">
        INSERT INTO party_post(user_num, title, content)
        VALUES(#{user_num}, #{title}, #{content})
    </insert>

    <!-- 게시글 목록 조회 -->
    <select id="selectAllPosts" resultType="PostDTO">
        SELECT * FROM party_post
    </select>

    <!-- 게시글 단건 조회 -->
    <select id="selectPostById" resultType="PostDTO">
        SELECT * FROM party_post WHERE post_id = #{post_id}
    </select>

    <!-- 게시글 수정 -->
    <update id="updatePost" parameterType="PostDTO">
        UPDATE party_post SET
                              title = #{postDto.title},
                              content = #{postDto.content},
                              updated_at = #{postDto.updatedAt}
        WHERE post_id = #{postId}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deletePost">
        DELETE FROM party_post WHERE post_id = #{post_id}
    </delete>
</mapper>